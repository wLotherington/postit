<div class='well'>
  <%= form_for @user do |f| %>
    <%= render 'shared/errors', obj: @user %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <!--div class="control-group">
      <%= f.label :phone, "Phone Number <small>(Only needed for 2 factor authentication)</small>".html_safe%>
      <%= f.text_field :phone, maxlength: 10 %>
    </div -->
    <div class='control-group'>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <%= f.submit @user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-success' %>
  <% end %>
</div>